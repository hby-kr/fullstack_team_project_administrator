  <select id="findReviewsById" resultType="com.artu.fullstack_team_project_administrator.dto.EventReviews" parameterType="String" resultMap="BaseResultMap">
    SELECT *
    FROM event_reviews
    WHERE user_id = #{userId}
  </select>
